    </form> -->

    <style>
        #filters{
            display: flex;
            flex-wrap: wrap;
            margin-top: 1rem;
            /* align-items: center; */
        }
        .filter{
            margin-right: 2.85rem;
            text-align: center;
            opacity: 0.7;
        }
        .filter:hover{
            opacity: 1;
            cursor: pointer;
        }
        .filter p {
            font-size: 0.8rem;
        }
        .tax-info{
            display: none;
        }
      .tax-toggal{
        border: 1px solid rgb(235, 230, 230);
        border-radius: 0.5rem;
        height: 2.5rem;
        padding: 1.5rem;
        display: flex;
        align-items: center;
        margin-left: 1rem;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      }
      .tax-toggal:hover{
        border: 1px solid rgb(23, 22, 22);
        background-color: whitesmoke;
      }
      .form-check-label{
        font-size: 0.9rem;
        font-weight: 500;
      }
    </style>

    <div id="filters">
        <div class="filter">
            <div><i class="fa-solid fa-city"></i></div>
            <p>Amazing views</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-cow"></i></div>
            <p>Farm</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-republican"></i></div>
            <p>National Park</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-umbrella-beach"></i></div>
            <p>Beachfront</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-hotel"></i></div>
            <p>Luxe</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-city"></i></div>
            <p>Top cities</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-mountain-sun"></i></div>
            <p>Mountains</p>
        </div>
        <div class="filter">
            <div><i class="fa-brands fa-fort-awesome"></i></div>
            <p>Castle</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-snowflake"></i></div>
            <p>Arctic</p>
        </div>
        <div class="filter">
            <div><i class="fa-solid fa-landmark-dome"></i></div>
            <p>Domes</p>
        </div>
        <div class="tax-toggal">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
            </div>
        </div>
    </div>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
            <% for(let listing of allListings) {%>
                <a href="/listings/<%= listing._id %>">
                <div class="card col listing-card">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="listing-image" style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b><%= listing.title %></b>
                        </p>
                        &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
                        <i class="tax-info"> &nbsp;&nbsp; +18% GST</i>
                        </p>
                    </div>
                </div>
                </a>
                <% } %>
        </div>

        <script>
            let taxSwitch = document.getElementById("flexSwitchCheckDefault");
            taxSwitch.addEventListener("click", () => {
               let taxInfo = document.getElementsByClassName("tax-info");
               for(info of taxInfo){
                if(info.style.display != "inline"){
                    info.style.display = "inline"
                }
                else{
                    info.style.display = "none"
                }
               }
            })
        </script>
